@page
@model VRBike.Tours.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Tour</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tour.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tour.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tour.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tour.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tour.Percorso)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tour.Percorso)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tour.Raccolta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tour.Raccolta)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tour.Risorse)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tour.Risorse)
        </dd>
        <dd class="col-sm-10">
            Show tour in:
            <table class="table">
                <tr><td>titolo</td><td>link</td></tr>
                @foreach(var item in Model.Tour.Bikeapps)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Title)</td>
                        <td>@Html.DisplayFor(modelItem => item.Link)</td>
                    </tr>             
                }

            </table>
        </dd>
        <dd class="col-sm-10">
            Videos
            <table class="table">
                <tr><td>titolo</td><td>link</td></tr>
                @foreach (var item in Model.Tour.Videos)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Title)</td>
                        <td>@Html.DisplayFor(modelItem => item.Link)</td>
                    </tr>
                }

            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Tour?.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
